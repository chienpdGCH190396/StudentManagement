{% extends 'base.html.twig' %}

{% block title %}Classroom Detail
{% endblock %}

{% block body %}
	<div class="container">
		<h2 class="text-primary  text-center">CLASSROOM DETAIL</h2>
		<a class="btn btn-outline-primary mb-3" href="{{ path('classroom_index') }}">BACK TO CLASSROOM LIST</a>
		<table class="table">
			<thead class="thead-light">
				<tr>
					<th scope="col">Name</th>
					<th scope="col">Type</th>
					<th scope="col">Description</th>
					<th scope="col">Courses</th>
					<th scope="col">Teachers</th>
					<th scope="col">Students</th>
					{% if is_granted('ROLE_ADMIN') %}
					<th scope="col">Action</th>
					{% endif %}
				</tr>
			</thead>
			<tbody>
				<tr>
					<th scope="row">{{classroom.name}}</th>
					<td>{{classroom.type}}</td>
					<td>{{classroom.description}}</td>

					<td>
						{% for s in classroom.courses %}
							<a href="{{ path('course_detail', {'id': s.id }) }}">
								{{ s.name }}
							</a>
							<br>
						{% endfor %}
					</td>

					<td>
						{% for a in classroom.teachers %}
							<a href="{{ path('teacher_detail', {'id': a.id }) }}">
								{{ a.name }}
							</a>
							<br>
						{% endfor %}
					</td>
					<td>
						{% for s in classroom.students %}
							<a href="{{ path('student_detail', {'id': s.id }) }}">
								{{ s.name }}
							</a>
							<br>
						{% endfor %}
					</td>
					{% if is_granted('ROLE_ADMIN') %}
					<td>
						<a class="btn btn-primary" href="{{ path('classroom_edit', {'id': classroom.id }) }}">EDIT</a>
						<a class="btn btn-warning" href="{{ path('classroom_delete', {'id': classroom.id }) }}" onclick="return confirm('Are you sure to delete this author ?')">DELETE</a>
					</td>
					{% endif %}
				</tr>

			</tbody>
		</table>
	</div>
{% endblock %}
