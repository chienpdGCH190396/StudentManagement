{% extends "base.html.twig" %}

{% block title %}Course Detail
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset ('css/detail.css')}}">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
{% endblock %}

{% block body %}
	<div class="container bootstrap snippets bootdey">
		<div class="row ng-scope">
			<div class="col-md-4">
				<div class="panel panel-default">
					<div class="panel-body text-center mt-2">
						<h3 class="m0 text-bold">{{course.name}}</h3>
						{% if is_granted('ROLE_ADMIN') %}
							<div class="text-center">
								<a style="margin-bottom:15px" class="btn btn-primary" href="{{ path('course_edit', {'id': course.id }) }}">EDIT</a>
								<a style="margin-bottom:15px" class="btn btn-warning" href="{{ path('course_delete', {'id': course.id }) }}" onclick="return confirm('Are you sure to delete this course ?')">DELETE</a>


							</div>
						{% endif %}
						<a class="btn btn-outline-primary mb-3" href="{{ path('course_index') }}">BACK TO COURSE LIST</a>

					</div>
				</div>

			</div>
			<div class="col-md-8">
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="mt-2">
							<div class="h4 text-center">COURSE DETAIL</div>
							<div class="row pv-lg">
								<div class="col-lg-2"></div>
								<div class="col-lg-8">

									<div class="form-group">
										<label class="col-sm-2 control-label" for="inputContact1">Name</label>
										<div class="col-sm-10">
											<input class="form-control" id="inputContact1" type="text" placeholder="" value="{{course.name}}" disabled>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-2 control-label" for="inputContact1">Type</label>
										<div class="col-sm-10">
											<input class="form-control" id="inputContact1" type="text" placeholder="" value="{{course.type}}" disabled>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-2 control-label" for="inputContact1">Description</label>
										<div class="col-sm-10">
											<input class="form-control" id="inputContact1" type="text" placeholder="" value="{{course.description}}" disabled>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-2 control-label" for="inputContact1">Classrooms</label>
										<div class="col-sm-10">
											{% for a in course.classrooms %}
												<a href="{{ path('classroom_detail', {'id': a.id }) }}">
													{{ a.name }}
												</a>
											{% endfor %}
										</div>
									</div>


								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

