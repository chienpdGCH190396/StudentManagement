{% extends 'base.html.twig' %}

{% block title %}All Classrooms
{% endblock %}

{% block body %}
	<div class="container">
		<h2 class="text-primary text-center">CLASSROOM LIST</h2>
		<a class="btn btn-outline-primary mb-3" href="{{ path('student_add') }}">ADD CLASSROOM</a>
		<table class="table">
			<thead class="thead-light">
				<tr>
					<th scope="col">Name</th>
					<th scope="col">Date Of Birth</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for student in students %}
					<tr>
						<td>
						<a href="{{path('student_detail', {'id': student.id})}}">{{student.name}}</a>
						</td>
						<td>{{student.dob|date('d/m/Y')}}</td>
                        <td></td>

						<td>
							{# <a class="btn btn-primary" href="{{ path('classroom_edit', {'id': classroom.id }) }}">EDIT</a>
							<a class="btn btn-warning" href="{{ path('classroom_delete', {'id': classroom.id }) }}" onclick="return confirm('Are you sure to delete this author ?')">DELETE</a> #}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

